{
  "name": "r0mdau/jisly",
  "description": "The smallest NoSQL database library, flat file JSON.",
  "type": "library",
  "license": "Apache-2.0",
  "homepage": "https://github.com/r0mdau/jisly",
  "require": {
    "php": ">=8.1"
  },
  "require-dev": {
    "malukenho/docheader": "^0.1.7",
    "php-coveralls/php-coveralls": "^2.5",
    "phpstan/phpstan": "^1.8",
    "phpstan/phpstan-strict-rules": "^1.4",
    "phpunit/phpunit": "^9.0",
    "squizlabs/php_codesniffer": "^3.5"
  },
  "autoload": {
    "psr-4": {
      "Jisly\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "JislyTest\\": "test/"
    }
  },
  "config": {
    "sort-packages": true
  },
  "scripts": {
    "check": [
      "@license-check",
      "@cs-check",
      "@test",
      "@phpstan"
    ],
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "phpstan": "phpstan analyze ./src",
    "test": "phpunit --colors=always",
    "test-coverage": "XDEBUG_MODE=coverage phpunit --colors=always --coverage-clover clover.xml",
    "license-check": "docheader check src/ test/"
  }
}
